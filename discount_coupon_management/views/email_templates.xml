<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!--Email template -->
        <record id="session_details_changes" model="mail.template">
            <field name="name">Registration details - Send by Email</field>
            <field name="model_id" ref="discount_coupon_management.model_make_company"/>
            <field name="email_from">${(user.email or '')|safe}</field>
            <field name="email_to">${object.email}</field>            
            <field name="subject">Registration in  Discount Coupon Management.</field>            
            <field name="body_html"><![CDATA[
            <p>
                Welcome,<i>${object.name}</i>!!!
            </p>
            <b>Thanks for Register.</b>
            <p>Your Account details for Make Discount Coupons are below.</p>
            <ul class="o_mail_thread_message_tracking">
                <li>
                    Compony Name:
                        <span>${object.name}</span>
                </li>
                <li>
                    Email address:
                        <span> ${object.email} </span>
                </li>
                <li>
                    Lisence No:
                        <span> ${object.licence_no} </span>
                </li>                
       		</ul>
            <p>if you have any kind of query or problem then you can contact us on given email address or contact no.</p>
            <p>Thank you,<br>
                --<br>
                Administrator.
            </p>
            ]]></field>
        </record>
    </data>
</odoo>