<?xml version="1.0" encoding="utf-8"?>
<odoo>


      <record id="view_coupon_details_data" model="ir.ui.view">
            <field name="name">coupon.summary.form</field>
            <field name="model">coupon.detail.summary</field>
            <field name="arch" type="xml">
            <form string="Coupon Details">
                <group>
                    <field name="date_from" />
                    <field name="date_to"/>
                </group>
                <footer>
                    <button name="print_report" string="Print" type="object" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-default"/>
                </footer>
            </form>
            </field>
        </record>

     <record id="action_coupon_details_report" model="ir.actions.act_window">
        <field name="name">Couopn Reports</field>
        <field name="res_model">coupon.detail.summary</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_coupon_details_data"/>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_coupon_details_report" name="Coupon Details Report"
              action="action_coupon_details_report" parent="menu_discount" groups="discount_coupon_management.coupon_group_manager" />

</odoo>